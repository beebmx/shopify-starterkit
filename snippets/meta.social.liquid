<!-- Facebook OG -->
<meta property="og:title" content="{{ page_title }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:type" content="website">
<meta property="og:image" content="https:{{ page_image | image_url }}">
<meta property="og:image:secure_url" content="https:{{ page_image | image_url }}">
<meta property="og:image:width" content="{{ page_image.width }}">
<meta property="og:image:height" content="{{ page_image.height }}">
<meta property="og:locale" content="{{ request.locale.iso_code }}">
<meta property="og:description" content="{{ page_description | default: shop.name | escape }}">

<!-- Twitter Tags -->
<meta name="twitter:title" content="{{ page_title }}">
<meta name="twitter:image" content="{{ page_image }}">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:description" content="{{ page_description | default: shop.name | escape }}">

<meta name="description" content="{{ page_description | default: shop.name | escape }}">
